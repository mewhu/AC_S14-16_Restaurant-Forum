<div class="container">
  <h1>分類後台</h1>
  <%= link_to '餐廳後台', admin_restaurants_path %>

  <div class="row">
    <div class="col-md-6">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>Category ID#</th>
            <th>Category Name</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
          <tr>
            <%# 直接寫td的話number#會是普通的黑字，沒有粗體突顯的效果 %>
            <th scope="row"><%= category.id %></th>
            <td><%= category.name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>